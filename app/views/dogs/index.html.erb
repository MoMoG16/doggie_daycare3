
<h1>Listing Dogs</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Breed</th>
      <th>Medical conditions</th>
      <th>Vet</th>
      <th>In daycare</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.dob %></td>
        <td><%= dog.breed.name %></td>
        <td><%= dog.medical_conditions %></td>
        <td><%= dog.vet.try(:doctor) %></td>
        <td><%= dog.in_daycare %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to "Add a new dog", new_dog_path, class: "btn btn-default" %>
</p>